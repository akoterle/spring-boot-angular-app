{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "spring-boot-angular"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico",
        { "glob": "styles.js", "input": "../node_modules/ckeditor/", "output": "./ckeditor/" },
        { "glob": "contents.css", "input": "../node_modules/ckeditor/", "output": "./ckeditor/" },
        { "glob": "config.js", "input": "./3rdParties/ckeditor/", "output": "./ckeditor/" },
        { "glob": "**/*", "input": "../node_modules/ckeditor/lang/", "output": "./ckeditor/lang/" },
        { "glob": "**/*", "input": "../node_modules/ckeditor/plugins/", "output": "./ckeditor/plugins/" },
        { "glob": "**/*", "input": "../node_modules/ckeditor/skins/", "output": "./ckeditor/skins/" },
        { "glob": "**/*", "input": "../node_modules/fine-uploader/fine-uploader/placeholders/", "output": "./fine-uploader/placeholders/" }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": ["styles.css", "../node_modules/ng2-tree/styles.css"],
      "scripts": ["../node_modules/ckeditor/ckeditor.js", "../node_modules/fine-uploader/fine-uploader/fine-uploader.min.js"],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
